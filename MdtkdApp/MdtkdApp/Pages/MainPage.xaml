<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MdtkdApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="mdtkdlogo_190x.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Master Downer's TaeKwonDo"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="22"
                HorizontalOptions="Center" />

            <Label
                Text="For events click below:"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Event Description Button"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="CounterBtn"
                Text="Events"
                SemanticProperties.Hint="Navigates to The Events Page"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />

            


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
